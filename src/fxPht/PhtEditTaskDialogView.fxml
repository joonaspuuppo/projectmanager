<?xml version="1.0" encoding="UTF-8"?>

<?import fi.jyu.mit.fxgui.RadioButtonChooser?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxPht.PhtEditTaskDialogController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Tehtävän nimi:">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="Muokkaa tehtävän nimeä" />
                     </tooltip>
                  </Label>
                  <TextField fx:id="editedTaskNameField" promptText="kirjoita tähän tehtävän nimi" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Tehtävän tagit:">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="Lisää tagit muodossa: &quot;tagi1, tagi2, tagi3...&quot;" />
                     </tooltip>
                  </Label>
                  <TextField fx:id="editedTagsField" promptText="tehtävän tagit, pilkulla erotettuina" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Tehtävän prioriteetti:">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="Miten kiireellinen tehtävä on?" />
                     </tooltip>
                  </Label>
                  <RadioButtonChooser fx:id="taskPriorityChooser" rivit="kiireellinen&#10;normaali&#10;kiireetön">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                     </HBox.margin>
                  </RadioButtonChooser>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="confirmChangesButton" mnemonicParsing="false" onAction="#handleConfirmChanges" text="Hyväksy muutokset">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleCancel" text="Peru muutokset" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
